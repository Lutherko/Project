@page
@model ElectronicComponents.Pages.Stock.IndexModel
@{
}

<br>
<h2>List of Stock</h2>
<a class='btn btn-primary btn-sm' href='/Stock/Create'>New Stock</a>
<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Manufacturer</th>
            <th>Price</th>
            <th>Address</th>
            <th>Created At</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model.listStocks)
        {
            <tr>
                <td>@item.id</td>
                <td>@item.name</td>
                <td>@item.manufacturer</td>
                <td>@item.price</td>
                <td>@item.address</td>
                <td>@item.created_at</td>
                <td>
                    <a class='btn btn-primary btn-sm' href='/Stock/Edit?id=@item.id'>Edit</a>
                    <a class='btn btn-primary btn-sm' href='/Stock/Delete?id=@item.id'>Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>